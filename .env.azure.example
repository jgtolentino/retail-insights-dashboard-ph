# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Model deployment names (update these based on your Azure OpenAI deployments)
AZURE_OPENAI_GPT35_DEPLOYMENT=gpt-35-turbo
AZURE_OPENAI_GPT35_16K_DEPLOYMENT=gpt-35-turbo-16k
AZURE_OPENAI_GPT4_DEPLOYMENT=gpt-4

# Azure PostgreSQL Configuration
AZURE_POSTGRES_HOST=your-server.postgres.database.azure.com
AZURE_POSTGRES_PORT=5432
AZURE_POSTGRES_DATABASE=retail_insights
AZURE_POSTGRES_USERNAME=your_username@your-server
AZURE_POSTGRES_PASSWORD=your_password
AZURE_POSTGRES_SSL=true
AZURE_POSTGRES_TIMEOUT=30000
AZURE_POSTGRES_MAX_CONNECTIONS=20

# Multi-tenant Configuration
DEFAULT_TENANT_ID=scout
ENABLE_TENANT_ISOLATION=true

# Vercel Configuration
VERCEL_URL=your-app.vercel.app
NODE_ENV=production

# Optional: Monitoring and Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DASHBOARD_URL=https://your-app.vercel.app

# Optional: Advanced Features
IOT_DEVICE_API_KEY=your_iot_device_api_key
ENABLE_COST_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true

# Development Configuration (for local development only)
VITE_AZURE_OPENAI_ENDPOINT=${AZURE_OPENAI_ENDPOINT}
VITE_AZURE_OPENAI_API_KEY=${AZURE_OPENAI_API_KEY}
VITE_AZURE_OPENAI_API_VERSION=${AZURE_OPENAI_API_VERSION}

# Security Configuration
ENABLE_REQUEST_LOGGING=true
MAX_QUERY_LENGTH=1000
RATE_LIMIT_PER_MINUTE=60