{
  "name": "@retail-insights/pulser",
  "version": "1.0.0",
  "description": "AI-powered task runner and workflow automation for React/TypeScript projects",
  "main": "pulser-simple.js",
  "bin": {
    "pulser": "./pulser"
  },
  "files": [
    "pulser",
    "pulser-simple.js",
    "pulser_agents/",
    "pulser.yaml",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "test": "vitest tests/agents/ tests/integration/",
    "test:agents": "vitest tests/agents/",
    "test:integration": "vitest tests/integration/",
    "build": "echo 'No build step required for this CLI tool'",
    "prepublishOnly": "npm test",
    "postinstall": "echo 'Pulser installed successfully! Run: pulser --help'"
  },
  "keywords": [
    "task-runner",
    "ai",
    "automation",
    "react",
    "typescript",
    "workflow",
    "cli",
    "agent",
    "planning",
    "github",
    "development"
  ],
  "author": "Retail Insights Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/retail-insights/pulser.git"
  },
  "bugs": {
    "url": "https://github.com/retail-insights/pulser/issues"
  },
  "homepage": "https://github.com/retail-insights/pulser#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
