{
  "name": "AI-Agency Dev Container",
  "image": "mcr.microsoft.com/devcontainers/python-node:1-3.11-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "GitHub.copilot",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "task doctor",
  "remoteUser": "vscode",
  "mounts": ["source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"],
  "env": {
    "PYTHONPATH": "${containerWorkspaceFolder}"
  }
}
